<main class="lista-candidatos">
	<h2>Lista de Candidatos</h2>

	{{#if candidatos.length}}
		{{#each candidatos}}
			<div class="candidato">
				<div class="caja">
					<p class="etiqueta">Nombre:</p>
					<p class="nombre">{{nombre}}</p>
				</div>

				<div class="caja">
					<p class="etiqueta">E-Mail:</p>
					<p class="nombre">{{email}}</p>
				</div>

				<div class="caja">
					<a
						href="/uploads/cv/{{cv}}"
						target="_blank"
						rel="noreferrer"
						class="btn btn-verde"
					>Ver CV</a>
				</div>
			</div>
		{{/each}}
	{{else}}
		No hay candidatos a√∫n
	{{/if}}
</main>